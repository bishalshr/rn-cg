{
  "env": {
    "browser": true,
    "node": false
  },
  "globals": {},
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "modules": true,
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "react-native"
  ],
  "rules": {
    "react-native/no-unused-styles": 2,
    "react-native/split-platform-components": 0,
    "react-native/no-inline-styles": 0,
    "react-native/no-color-literals": 0,
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "consistent-return": 0,
    "curly": [
      2,
      "multi"
    ],
    "eol-last": [
      1
    ],
    "indent": [
      "error",
      2
    ],
    "react/jsx-curly-spacing": [
      1,
      "never"
    ],
    "react/jsx-tag-spacing": [
      "error",
      {
        "afterOpening": "never",
        "beforeSelfClosing": "always",
        "closingSlash": "never"
      }
    ],
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/prefer-stateless-function": 2,
    "react/self-closing-comp": 2,
    "react/sort-prop-types": [
      1,
      {
        "ignoreCase": true
      }
    ],
    "react/prop-types": 2,
    "react/no-multi-comp": 1,
    "lines-around-comment": [
      2,
      {
        "allowBlockStart": true,
        "beforeBlockComment": true,
        "beforeLineComment": true
      }
    ],
    "max-len": [
      2,
      {
        "code": 120,
        "ignoreUrls": true,
        "ignoreComments": true,
        "tabWidth": 2
      }
    ],
    "no-debugger": 1,
    "no-extra-semi": 1,
    "semi": [1, "always"],
    "no-mixed-spaces-and-tabs": [
      1
    ],
    // Allow for spaced alignemnt of "=" and ":"
    "no-multi-spaces": [
      2,
      {
        "exceptions": {
          "Property": true,
          "AssignmentExpression": true
        }
      }
    ],
    "no-spaced-func": [
      1
    ],
    // We often change the lambda-function context with .bind()
    "no-extra-parens": 0,
    "react/jsx-max-props-per-line": [1, { "maximum": 1, "when": "multiline" }],
    "react/jsx-first-prop-new-line": [1, "multiline"],
    "no-unused-expressions": [
      1
    ],
    "no-shadow": [
      2
    ],
    "no-unused-vars": [
      2
    ],
    "no-console": ["error", { "allow": ["warn"] }],
    "react/jsx-indent-props": [2, 2],
    "object-curly-spacing": [
      1,
      "always"
    ],
    "padded-blocks": [
      2,
      "never"
    ],
    "sort-vars": [
      1,
      {
        "ignoreCase": true
      }
    ],
    "space-before-function-paren": [
      1,
      "never"
    ],
    "space-before-blocks": [
      2,
      "always"
    ],
    "key-spacing": [
      "error",
      {
        "align": "colon"
      }
    ],
    "keyword-spacing": [
      2,
      {
        "after": false,
        "before": true,
        "overrides": {
          "catch": {
            "after": false,
            "before": true
          },
          "export": {
            "after": true,
            "before": false
          },
          "from": {
            "after": true,
            "before": true
          },
          "let": {
            "after": true
          },
          "const": {
            "after": true
          },
          "import": {
            "after": true,
            "before": false
          },
          "return": {
            "after": true,
            "before": false
          },
          "try": {
            "after": true,
            "before": false
          },

          "else": {
            "after": true
          }
        }
      }
    ],
    "strict": [
      1,
      "never"
    ],
    "quotes": [
      1,
      "single"
    ]
  },
  "settings": {
    "react": {
      "pragma": "React"
    }
  }
}
